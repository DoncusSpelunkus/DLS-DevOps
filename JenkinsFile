pipeline {
    agent any
    triggers {
        pollSCM("* * * * *")
    }
    stages {
        stage('Build') {
            steps {
                bat "docker compose build"
            }
        }
        stage('Prep') {
            steps {
                bat "docker compose up featurehub -d"
                bat "docker compose up PatientService -d"
            }
        }
        stage('Test') {
            steps {
                bat "docker compose up Test"
            }
        }
    }
}